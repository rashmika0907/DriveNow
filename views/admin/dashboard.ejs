<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard | DriveNow</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="/admin/css/admin.css" />
  <script src="/js/clear-on-logout.js"></script>
</head>
<body>
  <header class="nav">
    <div class="logo">DriveNow Admin</div>
    <nav class="nav-links">
      <a href="/admin">Dashboard</a>
      <a href="/admin/cars">Cars</a>
      <a href="/admin/cars/calendar">Calendar</a>
      <a href="/admin/bookings">Bookings</a>
      <a href="/">Back to Site</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <main class="admin-container">
    <div class="dashboard-header">
      <div class="dashboard-header-content">
        <h1 class="admin-title">Dashboard Overview</h1>
        <p class="admin-subtitle">Welcome back! Here's what's happening today.</p>
      </div>
    </div>

    <section class="dashboard-section">
      <h2 class="section-title">Statistics</h2>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <!-- Bookings Stats -->
      <div class="stat-card stat-card-bookings">
        <div class="stat-card-header">
          <div class="stat-icon-wrapper bookings-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <h3>Bookings</h3>
        </div>
        <div class="stat-main-value"><%= stats.bookings.today %></div>
        <div class="stat-main-label">Today</div>
        <div class="stat-secondary">
          <div class="stat-secondary-item">
            <span class="stat-secondary-label">This Week</span>
            <span class="stat-secondary-value"><%= stats.bookings.thisWeek %></span>
          </div>
          <div class="stat-secondary-item">
            <span class="stat-secondary-label">This Month</span>
            <span class="stat-secondary-value"><%= stats.bookings.thisMonth %></span>
          </div>
        </div>
      </div>

      <!-- Cars Stats -->
      <div class="stat-card stat-card-cars">
        <div class="stat-card-header">
          <div class="stat-icon-wrapper cars-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 17H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-1"></path>
              <path d="M12 15l-3-3 3-3 3 3-3 3z"></path>
              <path d="M12 15l-3-3 3-3 3 3-3 3z"></path>
            </svg>
          </div>
          <h3>Fleet</h3>
        </div>
        <div class="stat-main-value"><%= stats.cars.total %></div>
        <div class="stat-main-label">Total Cars</div>
        <div class="stat-secondary">
          <div class="stat-secondary-item">
            <span class="stat-secondary-label">Available</span>
            <span class="stat-secondary-value stat-value-success"><%= stats.cars.available %></span>
          </div>
          <div class="stat-secondary-item">
            <span class="stat-secondary-label">Active</span>
            <span class="stat-secondary-value stat-value-info"><%= stats.cars.active %></span>
          </div>
          <div class="stat-secondary-item">
            <span class="stat-secondary-label">Maintenance</span>
            <span class="stat-secondary-value stat-value-warning"><%= stats.cars.maintenance %></span>
          </div>
        </div>
      </div>

      <!-- Operations Stats -->
      <div class="stat-card stat-card-operations">
        <div class="stat-card-header">
          <div class="stat-icon-wrapper operations-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <h3>Today's Operations</h3>
        </div>
        <div class="stat-operations-grid">
          <div class="stat-operation-item">
            <div class="stat-operation-icon pickup-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </div>
            <div class="stat-operation-content">
              <div class="stat-operation-value"><%= stats.operations.pickupsToday %></div>
              <div class="stat-operation-label">Pickups</div>
            </div>
          </div>
          <div class="stat-operation-item">
            <div class="stat-operation-icon return-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"></path>
              </svg>
            </div>
            <div class="stat-operation-content">
              <div class="stat-operation-value"><%= stats.operations.returnsToday %></div>
              <div class="stat-operation-label">Returns</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Revenue Stats -->
      <div class="stat-card stat-card-revenue">
        <div class="stat-card-header">
          <div class="stat-icon-wrapper revenue-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="1" x2="12" y2="23"></line>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <h3>Revenue</h3>
        </div>
        <div class="stat-main-value">₹<%= stats.revenue.today.toLocaleString('en-IN') %></div>
        <div class="stat-main-label">Today</div>
        <div class="stat-secondary">
          <div class="stat-secondary-item">
            <span class="stat-secondary-label">This Month</span>
            <span class="stat-secondary-value">₹<%= stats.revenue.thisMonth.toLocaleString('en-IN') %></span>
          </div>
          <div class="stat-secondary-item">
            <span class="stat-secondary-label">Year to Date</span>
            <span class="stat-secondary-value">₹<%= stats.revenue.ytd.toLocaleString('en-IN') %></span>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Actions -->
    <section class="dashboard-section">
      <h2 class="section-title">Quick Actions</h2>
      <div class="quick-actions-card">
      <div class="action-buttons-grid">
        <a href="/admin/cars/new" class="action-button action-button-primary">
          <div class="action-button-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
          </div>
          <div class="action-button-content">
            <div class="action-button-title">Add New Car</div>
            <div class="action-button-subtitle">Add a new vehicle to the fleet</div>
          </div>
        </a>
        <a href="/admin/cars" class="action-button action-button-secondary">
          <div class="action-button-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="9" y1="3" x2="9" y2="21"></line>
            </svg>
          </div>
          <div class="action-button-content">
            <div class="action-button-title">Manage Cars</div>
            <div class="action-button-subtitle">View and edit all vehicles</div>
          </div>
        </a>
        <a href="/admin/bookings" class="action-button action-button-secondary">
          <div class="action-button-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div class="action-button-content">
            <div class="action-button-title">View Bookings</div>
            <div class="action-button-subtitle">Manage all reservations</div>
          </div>
        </a>
      </div>
      </div>
    </section>
  </main>

  <script src="/js/theme.js"></script>
  <script src="/admin/js/admin-dashboard.js"></script>
</body>
</html>

